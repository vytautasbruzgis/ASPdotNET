@model List<CarModel>
<h3>Car list</h3>


@if (@Model.Any())
{
        <table class="table">
            <thead><th scope="col">CarId</th><th scope="col">Model</th><th scope="col">Year</th><th scope="col">Color</th><th scope="col">Actions</th></thead>
        @foreach(CarModel car in @Model)
        {
            <tr scope="row">
            <td scope="col">@car.CarId</td><td scope="col">@car.Model</td><td scope="col">@car.Year</td><td scope="col">@car.Color</td>
            <td>
                <a href="/Car/Edit/@car.CarId">Edit</a>
                <a href="/Car/Delete/@car.CarId">Delete</a>
                <a href="/Car/Details/@car.CarId">Details</a>
            </td>
            </tr>
        }
        </table>
} else{
        <h4>List is empty</h4>
    }