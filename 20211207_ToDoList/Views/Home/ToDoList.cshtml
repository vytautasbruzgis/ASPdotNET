@model List<ToDo>

<h3>Your TODO list: </h3>

@if (@Model.Any())
{
        <table class="table">
            <thead><th scope="col">Name</th><th scope="col">Description</th></thead>
        @foreach(ToDo todo in @Model)
        {
            <tr>
            <td>@todo.Name</td><td>@todo.Description</td>
            </tr>
        }
        </table>
} else{
        <h4>List is empty</h4>
    }