@using _20220107_HotelCleaning.Models.Dtos
@model List<WorkerDto>

<h3>Worker list</h3>
<br/>

@if (@Model.Any())
{
        <table class="table">
            <thead>
                <th scope="col">Worker</th>
                <th scope="col">JobType</th>
                <th scope="col">Uncompleted tasks</th>
                <th scope="col">Actions</th>
            </thead>
            @foreach(var worker in @Model)
            {
                <tr scope="row">
                    <td scope="col">@worker.FullName</td>
                    <td scope="col">@worker.JobTypeName</td>
                    <td scope="col">@worker.UncompletedTasks</td>

                    <td>
                        @Html.ActionLink("Details", "Details", "Worker", new { Id = @worker.WorkerId}, null)
                    </td>
                </tr>
            }
        </table>
} else {
        <h4>List is empty</h4>
}
<br />
<a href="/Worker/Create">Add new</a>